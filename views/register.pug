extends layout



block content
  h1= "회원가입페이지"
  form(action='/api/register', method='POST')
    div
      | 필수 정보를 입력해주세요.
    div
      div
        input(id="input_id", type="text", name="id", placeholder="아이디*(4~20자)", required)
      div
        label(for="input_id", id="input_id_label")
    div
      div
        input(id="input_password", type="password", name="password", placeholder="비밀번호*(영문+숫자, 8~20자)", required)
      div
        label(for="input_password", id="input_password_label")
    div
      div
        input(id="input_password_check", type="password", name="password_check", placeholder="비밀번호 재확인*", required)
      div
        label(for="input_password_check" id="input_password_check_label")
    div
      div
        input(id="input_email_username" type="text", name="email_username", placeholder="이메일 앞자리*", required)
        | @
        input(id="input_email_provider" type="text", name="email_provider", placeholder="이메일 뒺자리*", required)
      div
        label(for="input_email_username" id="input_email_label")
    div
      select(id="select_email_provider")
        option(value="") 직접 입력
        option(value="naver.com") naver.com
        option(value="gmail.com") gmail.com
    div
      div
        input(id="input_name" type="text", name="name", placeholder="이름*", required)
      div
        label(id="input_name_label" for="input_name")
    div
      div
        input(id="input_phone" type="text", name="phone", placeholder="휴대폰*", required)
        button(type="button") 인증받기
      div
        label(for="input_phone" id="input_phone_label")
    div
      div
        input(type="text", placeholder="인증번호 6자리 입력")
        button(type="button") 확인
      div
        label(for="phone_auth_label" id="input_password_label")
    div
      input(type="checkbox")
      | 선택 정보를 입력하시겠어요? 
      a(href="/register") 내용보기
    div 
      input(type="text", name="postNumber",placeholder="우편번호")
      |
      input(type="button", value="주소찾기")
    div
      input(type="text", name="address", placeholder="주소")
    div
      input(type="text", name="detail", placeholder="상세 주소")
    

    div
      input(type="checkbox", id="allowAll", onclick="checkboxCheck(this)")
      | 전체 약관에 동의합니다 
    div  
      input(type="checkbox", id="allowRequired")
      | 필수 항목에 동의합니다
    div
      a(href="/register") 배민사장님광장 이용약관
      |
      a(href="/register") 개인정보 수집이용 동의
    div
      input(type="checkbox", id="allowAdvertising")
      | 광고성 정보 수신 동의 (선택) 
    div 
      a 만 14세 이상 회원만 가입 가능합니다.
      |
      a(href="/register") 내용보기

    input(type='submit', value='가입완료') 
  script(src="/javascripts/validations.js")
  script(src="/javascripts/register.js")
